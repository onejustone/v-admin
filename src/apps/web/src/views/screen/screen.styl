.hitokoto__full-page
  position relative
  height 100%
  color white
  z-index 1
  background url(https://piccdn.freejishu.com/images/2018/03/11/qf3cu.jpg) center no-repeat

.hitokoto__wrap
  background rgba(0, 0, 0, 0.3)
  display flex
  height 100%
  justify-content center
  align-items center
  padding 0 20px

.hitokoto__content
  display inline-block
  position relative
  padding 0 20px

.word
  font-size 2.3rem
  text-align center
  line-height 50px
  word-break normal
  margin 0
  padding 15px 50px

.author
  position absolute
  botttom 0
  right 0
  color #f5f7fa
